<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_chile"
    tools:context=".actividad_3">

    <!-- Botón de Atrás -->
    <ImageButton
        android:id="@+id/btnRetrocederAnterior"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/baseline_arrow_back_24"
        android:backgroundTint="#D52B1E"
        android:contentDescription="@string/volver_atras"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"/>

    <!-- Empanada de Queso -->
    <TextView
        android:id="@+id/tvEmpanadaQueso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Empanada de queso"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/btnRetrocederAnterior"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <ImageButton
        android:id="@+id/btnEmpanadaQueso"
        android:layout_width="118dp"
        android:layout_height="117dp"
        android:scaleType="fitCenter"
        android:src="@drawable/btn_queso"
        android:background="@null"
        app:layout_constraintTop_toBottomOf="@+id/tvEmpanadaQueso"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp" />

    <!-- Empanada de Pino -->
    <TextView
        android:id="@+id/tvEmpanadaPino"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Empanada de pino"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/btnEmpanadaQueso"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <ImageButton
        android:id="@+id/btnEmpanadaPino"
        android:layout_width="120dp"
        android:layout_height="118dp"
        android:scaleType="fitCenter"
        android:src="@drawable/btn_pino"
        android:background="@null"
        app:layout_constraintTop_toBottomOf="@+id/tvEmpanadaPino"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp" />

    <!-- Empanada de Marisco -->
    <TextView
        android:id="@+id/tvEmpanadaMarisco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Empanada de marisco"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/btnEmpanadaPino"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <ImageButton
        android:id="@+id/btnEmpanadaMarisco"
        android:layout_width="121dp"
        android:layout_height="124dp"
        android:scaleType="fitCenter"
        android:src="@drawable/btn_marisco"
        android:background="@null"
        app:layout_constraintTop_toBottomOf="@+id/tvEmpanadaMarisco"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
