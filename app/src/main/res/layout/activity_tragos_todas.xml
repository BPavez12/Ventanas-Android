<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainTragos"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_chile"
    tools:context=".TragosTodas">

    <!-- Mensaje inicial -->
    <TextView
        android:id="@+id/mensajeDeslizar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Deslizar hacia los lados para cambiar recetas"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:background="@drawable/burbuja_texto"
        android:padding="10dp"
        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Horizontal Scroll para cambiar recetas -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <!-- Terremoto -->
            <LinearLayout
                android:id="@+id/terremoToV"
                android:layout_width="410dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/textTerremoto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:text="@string/titulo_terremoto"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:textStyle="bold"/>

                <ImageView
                    android:id="@+id/imgTerremoto"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_marginTop="30dp"
                    android:adjustViewBounds="true"
                    android:paddingLeft="40dp"
                    android:paddingRight="40dp"
                    android:scaleType="fitCenter"
                    android:contentDescription="@string/titulo_terremoto"
                    app:srcCompat="@drawable/terremoto"/>

                <ScrollView
                    android:layout_width="340dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:padding="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"

                        android:padding="10dp">

                        <TextView
                            android:id="@+id/ingredientesTerremoto"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/ingredientes_terremoto"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/preparacionTerremoto"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/preparacion_terremoto"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginTop="12dp"/>
                    </LinearLayout>
                </ScrollView>
            </LinearLayout>

            <!-- Mango Sour -->
            <LinearLayout
                android:id="@+id/mangoSourV"
                android:layout_width="410dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/textMangoSour"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:text="@string/titulo_mango_sour"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:textStyle="bold"/>

                <ImageView
                    android:id="@+id/imgMangoSour"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_marginTop="30dp"
                    android:adjustViewBounds="true"
                    android:paddingLeft="40dp"
                    android:paddingRight="40dp"
                    android:scaleType="fitCenter"
                    android:contentDescription="@string/titulo_mango_sour"
                    app:srcCompat="@drawable/mango_sour"/>

                <ScrollView
                    android:layout_width="340dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:padding="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/ingredientesMangoSour"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/ingredientes_mango_sour"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/preparacionMangoSour"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/preparacion_mango_sour"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginTop="12dp"/>
                    </LinearLayout>
                </ScrollView>
            </LinearLayout>

            <!-- Vino con Frutas -->
            <LinearLayout
                android:id="@+id/vinoFrutasV"
                android:layout_width="410dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/textVinoFrutas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:text="@string/titulo_vino_frutas"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:textStyle="bold"/>

                <ImageView
                    android:id="@+id/imgVinoFrutas"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_marginTop="30dp"
                    android:adjustViewBounds="true"
                    android:paddingLeft="40dp"
                    android:paddingRight="40dp"
                    android:scaleType="fitCenter"
                    android:contentDescription="@string/titulo_vino_frutas"
                    app:srcCompat="@drawable/vino_con_frutas"/>

                <ScrollView
                    android:layout_width="340dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:padding="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/ingredientesVinoFrutas"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/ingredientes_vino_frutas"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/preparacionVinoFrutas"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/preparacion_vino_frutas"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginTop="12dp"/>
                    </LinearLayout>
                </ScrollView>
            </LinearLayout>

        </LinearLayout>
    </HorizontalScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>