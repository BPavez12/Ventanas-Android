<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainVinoF"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_chile"
    tools:context=".VinoConFrutas">

    <!-- Botón atrás -->
    <ImageButton
        android:id="@+id/btnAtrasVinoFrutas"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="@android:color/transparent"
        android:contentDescription="@string/volver_atras"
        android:scaleType="centerCrop"
        android:src="@drawable/btn_retroceso"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Título -->
    <TextView
        android:id="@+id/tituloVinoFrutas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/titulo_vino_frutas"
        android:textColor="@color/white"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnAtrasVinoFrutas" />

    <!-- Imagen -->
    <ImageView
        android:id="@+id/imgVinoFrutas"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/titulo_vino_frutas"
        android:src="@drawable/vino_con_frutas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tituloVinoFrutas" />

    <!-- Scroll con cuadro azul -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/imgVinoFrutas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#0039A6"
            android:padding="10dp"
            android:orientation="vertical">

            <!-- Ingredientes -->
            <TextView
                android:id="@+id/ingredientesVinoFrutas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ingredientes_vino_frutas"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold"/>

            <!-- Preparación -->
            <TextView
                android:id="@+id/preparacionVinoFrutas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/preparacion_vino_frutas"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="12dp"/>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
