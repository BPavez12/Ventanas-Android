<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_chile"
    tools:context=".VinoConFrutas">

    <!-- Boton de Atras -->
    <!-- Botón atrás -->
    <ImageButton
        android:id="@+id/btnRecetasAnteriores"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:backgroundTint="#D52B1E"
        android:src="@drawable/baseline_arrow_back_24"
        android:contentDescription="Atrás"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"/>

    <!-- Titulo -->
    <TextView
        android:id="@+id/vinoFrutaTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vino con Frutas"
        android:textColor="@color/white"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

    <!-- Imagen del cóctel -->
    <ImageView
        android:id="@+id/imgVinoFrutas"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/vino_con_frutas"
        android:contentDescription="Imagen Vino con Frutas"
        app:layout_constraintTop_toBottomOf="@id/vinoFrutaTitulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- Texto -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/imgVinoFrutas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ingredientesVinoFruta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ingredientes:\nJarabe:\n- 2 tazas de azúcar\n- 1 taza de agua\n\nVino con Frutillas o Borgoña:\n- 200 g de frutillas picadas\n- 3/4 taza de jarabe\n- 1 medida de pisco\n- Hielo a gusto\n- 1 botella de vino tinto\n\nPonche o Vino con Chirimoya:\n- 1 chirimoya\n- 3/4 taza de jarabe\n- 1 medida de pisco\n- Hielo a gusto\n- 1 vino blanco"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:id="@+id/textView18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Preparación:"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/textView17"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jarabe: Poner el agua y azúcar en un sartén y revolver hasta que se disuelva el azúcar. Reservar el jarabe en un jarro.\n\nVino con Frutillas o Borgoña: Picar las frutillas y ponerlas en un bowl. Dejar macerar alrededor de 30 minutos con el jarabe hecho previamente. Echar las frutillas en un jarro, junto con hielo, vino y medida de pisco.\n\nPonche de Chirimoya: Picar las chirimoyas y ponerlas en un bowl. Dejar macerar con jarabe alrededor de 30 minutos. Echar chirimoyas en un jarro, junto con hielo, vino y medida de pisco."
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"/>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
