<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_chile"
    tools:context=".EmpanadasTodas">

    <!-- Botón de atrás -->
    <ImageButton
        android:id="@+id/btnMenuRetroceder"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="@android:color/transparent"
        android:contentDescription="@string/volver_atras"
        android:scaleType="centerCrop"
        android:src="@drawable/btn_retroceso"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <HorizontalScrollView
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <!-- Empanada de Queso -->
            <LinearLayout
                android:id="@+id/EQuesoV"
                android:layout_width="410dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textEQueso"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="85dp"
                    android:text="    Empanada de Queso"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imgEQueso"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:adjustViewBounds="true"
                    android:paddingLeft="60dp"
                    android:paddingRight="50dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/empanada_de_queso" />

                <ScrollView
                    android:id="@+id/scrollQueso"
                    android:layout_width="340dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="34dp"
                    android:layout_marginTop="40dp"
                    android:padding="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/ingredientesEmpanadaQueso"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/ingredientes_empanada_queso"
                            android:textColor="#FFFF"
                            android:textSize="14sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/preparacionEmpanadaQueso"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/preparacion_empanada_queso"
                            android:textColor="#FFFF"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginTop="12dp"/>
                    </LinearLayout>
                </ScrollView>

            </LinearLayout>

            <!-- Empanada de Pino -->
            <LinearLayout
                android:id="@+id/EPinoV"
                android:layout_width="410dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textEPino"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="85dp"
                    android:text="  Empanada de Pino"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imgEPino"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:adjustViewBounds="true"
                    android:paddingLeft="60dp"
                    android:paddingRight="50dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/empanada_pino" />

                <ScrollView
                    android:id="@+id/scrollView2"
                    android:layout_width="340dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="34dp"
                    android:layout_marginTop="40dp"
                    android:padding="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/ingredientesEmpanadaPino"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/ingredientes_empanada_pino"
                            android:textColor="#FFFF"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/preparacionEmpanadaPino"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="@string/preparacion_empanada_pino"
                            android:textColor="#FFFF"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </ScrollView>

            </LinearLayout>

            <!-- Empanada de Marisco -->
            <LinearLayout
                android:id="@+id/EMariscoV"
                android:layout_width="410dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textEMarisco"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="85dp"
                    android:text="    Empanada de Marisco"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imgEMarisco"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:adjustViewBounds="true"
                    android:paddingLeft="60dp"
                    android:paddingRight="50dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/empanada_marisco" />

                <ScrollView
                    android:id="@+id/scrollMarisco"
                    android:layout_width="340dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="34dp"
                    android:layout_marginTop="40dp"
                    android:padding="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/ingredientesEmpanadaMarisco"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/ingredientes_empanada_marisco"
                            android:textColor="#FFFF"
                            android:textSize="14sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/preparacionEmpanadaMarisco"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/preparacion_empanada_marisco"
                            android:textColor="#FFFF"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginTop="12dp"/>
                    </LinearLayout>
                </ScrollView>

            </LinearLayout>

        </LinearLayout>
    </HorizontalScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
