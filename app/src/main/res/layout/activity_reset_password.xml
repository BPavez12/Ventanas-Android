<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <!-- Título -->
    <TextView
        android:id="@+id/tvTituloReset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Has olvidado tu contraseña"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="72dp" />

    <!-- Instrucción -->
    <TextView
        android:id="@+id/tvInstrReset"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Ingrese su correo electrónico a continuación y haga clic en Restablecer contraseña."
        app:layout_constraintTop_toBottomOf="@id/tvTituloReset"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Etiqueta correo -->
    <TextView
        android:id="@+id/tvCorreoReset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Correo electrónico"
        app:layout_constraintTop_toBottomOf="@id/tvInstrReset"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp" />

    <!-- Campo correo -->
    <EditText
        android:id="@+id/etCorreoReset"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        app:layout_constraintTop_toBottomOf="@id/tvCorreoReset"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Botón enviar -->

    <!-- Volver al login -->
    <Button
        android:id="@+id/btnEnviarReset"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:text="Restablecer contraseña"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etCorreoReset" />

    <TextView
        android:id="@+id/tvVolverLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Volver al inicio de sesión"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="#3F51B5"
        app:layout_constraintTop_toBottomOf="@id/btnEnviarReset"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
