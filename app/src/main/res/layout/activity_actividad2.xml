<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_chile"
    tools:context=".actividad_2">

    <!-- Botón para regresar al menú -->
    <ImageButton
        android:id="@+id/btnRetrocederAnterior"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/baseline_arrow_back_24"
        android:backgroundTint="#D52B1E"
        android:contentDescription="@string/volver_atras"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"/>


    <!-- Empanadas -->
    <TextView
        android:id="@+id/tvEmpanadas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Empanadas"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/btnRetrocederAnterior"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <ImageButton
        android:id="@+id/btnEmpanadas"
        android:layout_width="119dp"
        android:layout_height="89dp"
        android:src="@drawable/btn_empanada"
        android:scaleType="fitCenter"
        android:background="@null"
        app:layout_constraintTop_toBottomOf="@+id/tvEmpanadas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Parrilla -->
    <TextView
        android:id="@+id/tvParrilla"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Parrilla"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/btnEmpanadas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <ImageButton
        android:id="@+id/btnParrilla"
        android:layout_width="119dp"
        android:layout_height="89dp"
        android:src="@drawable/btn_asado"
        android:scaleType="fitCenter"
        android:background="@null"
        app:layout_constraintTop_toBottomOf="@+id/tvParrilla"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Tragos -->
    <TextView
        android:id="@+id/tvTragos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tragos"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/btnParrilla"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <ImageButton
        android:id="@+id/btnTragos"
        android:layout_width="119dp"
        android:layout_height="89dp"
        android:src="@drawable/btn_tragos"
        android:scaleType="fitCenter"
        android:background="@null"
        app:layout_constraintTop_toBottomOf="@+id/tvTragos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
