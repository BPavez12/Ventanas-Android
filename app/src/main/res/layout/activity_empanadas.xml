<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_chile"
    tools:context=".Empanadas">


    <!-- Botón de Atrás -->
    <ImageButton
        android:id="@+id/btnRetrocederAnterior"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="@android:color/transparent"
        android:contentDescription="@string/volver_atras"
        android:scaleType="centerCrop"
        android:src="@drawable/btn_retroceso"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Empanada de Marisco -->
    <ImageButton
        android:id="@+id/btnEmpanadaMarisco"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_marginTop="4dp"
        android:background="#0039A6"
        android:padding="10dp"
        android:scaleType="fitCenter"
        android:src="@drawable/btn_marisco"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvEmpanadaMarisco" />

    <!-- Empanada de Pino -->
    <ImageButton
        android:id="@+id/btnEmpanadaPino"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_marginTop="4dp"
        android:background="#0039A6"
        android:padding="10dp"
        android:scaleType="fitCenter"
        android:src="@drawable/btn_pino"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvEmpanadaPino" />

    <!-- Empanada de Queso -->
    <ImageButton
        android:id="@+id/btnEmpanadaQueso"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_marginTop="4dp"
        android:background="#0039A6"
        android:padding="10dp"
        android:scaleType="fitCenter"
        android:src="@drawable/quesoempanada"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvEmpanadaQueso" />

    <TextView
        android:id="@+id/tvEmpanadaQueso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Empanada de queso"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnRetrocederAnterior" />

    <TextView
        android:id="@+id/tvEmpanadaPino"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Empanada de pino"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnEmpanadaQueso" />

    <TextView
        android:id="@+id/tvEmpanadaMarisco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Empanada de marisco"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnEmpanadaPino" />

</androidx.constraintlayout.widget.ConstraintLayout>
